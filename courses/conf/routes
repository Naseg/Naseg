# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /home                       controllers.SecuredApplication.index()
GET     /provadb	                controllers.Application.provadb()
POST    /newexterncourse            controllers.SecuredApplication.newExternCourse()

# Authentication
#GET     /login                             controllers.Authentication.login()
POST    /login                              controllers.Authentication.authenticate()
GET     /logout                             controllers.Authentication.logout()

# Studente
GET     /student                            controllers.Students.index()
GET     /student/addtosp/:course            controllers.Students.addToStudyPlan(course: Long)
GET     /student/rmfromsp/:course           controllers.Students.rmFromStudyPlan(course: Long)
GET     /student/career                     controllers.Students.career()
GET     /student/studyplan                  controllers.Students.studyplan()

# Supervisor
GET     /supervisor                         controllers.Supervisors.index()
GET     /supervisor/studyplan               controllers.Supervisors.studyplan(id: Long ?= -1)
GET     /supervisor/studyplan/:id           controllers.Supervisors.studyplan(id: Long)
GET     /supervisor/career                  controllers.Supervisors.career(id: Long ?= -1)
GET     /supervisor/career/:id              controllers.Supervisors.career(id: Long)

# Administration
GET     /admin                              controllers.Admins.index()
GET     /admin/course                       controllers.Admins.course()
GET     /admin/professore                   controllers.Admins.professore()
GET     /admin/student                      controllers.Admins.student()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

